<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('../common/headerlink') -%>
        <title>e comm</title>
</head>

<body>
    <%- include('../common/navbar') -%>
    <% if(msg !='' ) { %>
        <div class="container pt-4">
            <div class="alert <%= addClass %> alert-dismissible fade show" role="alert">
                <%= msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        <% } %>
        <div class="container">
            <div class="py-4" >
                <form method="post" action="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="" class="form-label">Alias</label>
                                <input type="text" class="form-control" name="alias" id="">
                            </div>
    
                            <div class="mb-3">
                                <label for="" class="form-label">First name</label>
                                <input type="text" class="form-control" name="fname" id="">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Last Name</label>
                                <input type="text" class="form-control" name="lname" id="">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">mobile</label>
                                <input type="text" name="mobile" name="mobile" class="form-control" id="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="" class="form-label">Address</label>
                                <input type="text" class="form-control" name="address" id="">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">City</label>
                                <input type="text" class="form-control" name="city" id="">
                            </div>
    
                            <div class="mb-3">
                                <label for="" class="form-label">State</label>
                                <select class="form-select" name="state" aria-label="Default select example">
                                    <option disabled selected value>-- Please Choose --</option>
                                    <option value="up">UP</option>
                                    <option value="delhi">Delhi</option>
                                    <option value="uk">UK</option>
                                </select>
                            </div>
    
                            <div class="mb-3">
                                <label for="" class="form-label">Postal Code</label>
                                <input type="text" name="postalcode" class="form-control" id="">
                            </div>
                        </div>
                    </div>
    
    
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
      
        <%- include('../common/footer') -%>

            <%- include('../common/footerlink') -%>

</body>

</html>