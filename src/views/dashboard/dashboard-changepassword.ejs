<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('../common/headerlink') -%>
        <link rel="stylesheet" href="/assets/css/style.css">
        <title> Dashboard </title>
</head>

<body>
    <%- include('../common/dashboardnavbar') -%>
        <div class="main-con">
            <%- include('../common/dashboard-sidebar') -%>
                <div class="main-body">
                    <% if(msg !='' ) { %>
                        <div class="container pt-4">
                            <div class="alert <%= addClass %> alert-dismissible fade show" role="alert">
                                <%= msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                        <% } %>

                    <div class="col-9 m-auto my-4 p-4 shadow">
                        <form action="" method="post">
                            <div class="mb-3">
                                <label for="" class="form-label">Old Password</label>
                                <input type="text" name="oldPassword"  class="form-control" id="">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">New password</label>
                                <input type="email" name="newPassword"  class="form-control" id="">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">New Confirm password</label>
                                <input type="text" name="newCPassword" class="form-control" id="">
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
        </div>

        <%- include('../common/footerlink') -%>
</body>

</html>